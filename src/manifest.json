{
  "version": "4.20",
  "name": "LiveTL - Translation Filter for Streams",
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://www.youtube.com/*?*",
    "https://www.youtube.com/youtubei/v1/live_chat/get_live_chat/*",
    "https://www.youtube.com/youtubei/v1/live_chat/get_live_chat_replay/*",
    "https://www.twitch.tv/*"
  ],
  "icons": {
    "128": "./img/128x128.png"
  },
  "action": {
    "default_icon": {
      "48": "./img/48x48.png",
      "128": "./img/128x128.png"
    }
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*",
        "https://studio.youtube.com/live_chat*",
        "https://studio.youtube.com/live_chat_replay*"
      ],
      "js": [
        "submodules/chat/src/scripts/chat-interceptor.ts",
        "submodules/chat/src/scripts/chat-injector.ts",
        "ts/content_scripts/injector.ts",
        "js/pages/translatormode.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://www.youtube.com/error*?*"
      ],
      "js": [
        "ts/content_scripts/workaround-injector.ts"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "ts/content_scripts/twitch-injector.ts"
      ],
      "all_frames": true
    }
  ],
  "{{firefox}}.background": {
    "scripts": ["js/pages/background.js", "submodules/chat/src/scripts/chat-background.ts"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.html",
        "*.png",
        "*.gif",
        "*.mp4"
      ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{c20c6ec1-eea0-4b7b-8640-43448a342440}",
      "strict_min_version": "42.0"
    }
  }
}
