{
  "name": "LiveTL - Live Translations for Streams",
  "description": "Get live translations for YouTube streams, crowdsourced from bilingual viewers!",
  "version": "VERSION",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://www.youtube.com/*?*",
    "https://www.youtube.com/youtubei/v1/live_chat/get_live_chat/*",
    "https://www.youtube.com/youtubei/v1/live_chat/get_live_chat_replay/*",
    "EMBED_DOMAIN/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://kentonishi.github.io/LiveTL/*",
        "EMBED_DOMAIN/*"
      ],
      "js": [
        "./js/frame.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "./icons/128x128.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "./icons/16x16.png",
    "48": "./icons/48x48.png",
    "128": "./icons/128x128.png"
  },
  "web_accessible_resources": [
    "icons/*",
    "index.html",
    "js/*",
    "css/*",
    "jquery.min.js",
    "jquery-ui.min.js",
    "jquery-ui-touch.js",
    "manifest.json",
    "updateMessage.txt",
    "popout/*"
  ],
  "incognito": "split",
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}
